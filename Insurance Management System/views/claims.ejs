<%- include('./partials/userBoilerplate') %>
<title><%=title%></title>
<div class="container">
  <h2>File a Claim</h2>
  <form method="POST" action="/claim/policy">
    <div class="form-group">
      <label for="claim-status">Claim Status</label>
      <input type="text" class="form-control" id="claim-status" name="claim_status" required>
    </div>
    <div class="form-group">
      <label for="claim-date">Claim Date</label>
      <input type="date" class="form-control" id="claim-date" name="claim_date" required>
    </div>
    <div class="form-group">
      <label for="claim-description">Claim Description</label>
      <textarea class="form-control" id="claim-description" name="claim_description" required></textarea>
    </div>
    <div class="form-group">
      <label for="policy-id">Policy ID</label>
      <input type="number" class="form-control" id="policy-id" name="policy_id" required>
    </div>
    <div class="form-group">
      <label for="customer-id">Customer ID</label>
      <input type="number" class="form-control" id="customer-id" name="customer_id" required>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
  