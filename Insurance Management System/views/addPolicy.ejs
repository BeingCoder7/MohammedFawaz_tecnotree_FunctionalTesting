<%- include('./partials/adminBoilerplate') %>
<title><%=title%></title>
<div class="container">
    <h1>Insert Policy</h1>
    <form action="/add/policy" method="post">
      <div class="form-group">
        <label for="policy_type">Policy Type:</label>
        <input type="text" class="form-control" id="policy_type" name="policy_type" required>
      </div>
      <div class="form-group">
        <label for="insured_item">Insured Item:</label>
        <input type="text" class="form-control" id="insured_item" name="insured_item" required>
      </div>
      <div class="form-group">
        <label for="coverage_amount">Coverage Amount:</label>
        <input type="number" class="form-control" id="coverage_amount" name="coverage_amount" required>
      </div>
      <button type="submit" class="btn btn-primary mt-5">Add</button>
    </form>
  </div>